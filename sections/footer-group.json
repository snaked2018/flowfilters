        "menu-0": {
          "type": "store_information",
          "settings": {
            "logo_width": 160,
            "heading": "About your store",
            "description": "<p>This text area can be used to explain your brand's vision and mission to your customers.<\/p>"
          }
        },
        "menu-1": {
          "type": "store_contact",
          "settings": {
            "contact_heading": "Contact us"
          }
        },
        "menu-2": {
          "type": "newsletter",
          "settings": {
            "newsletter_heading": "Newsletter",
