{% liquid
  if section.settings.content_alignment == 'ta-left'
    assign classes = 's-header pb-0 ta-left'
  else
    assign classes = 's-header pb-0 ta-center'
    assign description_extra_class = ' m-sides'
    assign btn_position = 'center-xs'
  endif
%}
<div class="ctnr" data-ui-component="Text Section" role="region" aria-labelledby="sectionHeading-{{ section.id | md5 | truncate: 12, "" }}">
  {% render 'section-header',
    btn_position: btn_position,
    classes: classes,
    subheading: section.settings.subheading,
    heading: section.settings.heading,
    heading_classes: section.settings.heading_size
    description: section.settings.description,
    description_extra_class: description_extra_class,
    button_main_text: section.settings.button_main_text,
    button_main_link: section.settings.button_main_link,
    button_sub_text: section.settings.button_sub_text,
    button_sub_link: section.settings.button_sub_link,
    section: section
  %}
  {%- render 'section-id', section: section -%}
</div>
{% schema %}
{
  "name": "t:sections.text.name",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:general.settings.headers.header_layout.content"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "t:general.settings.content_alignment.label",
      "default": "ta-center m-auto",
      "options": [
        {
          "value": "ta-left",
          "label": "t:general.settings.option_left.label"
        },
        {
          "value": "ta-center m-auto",
          "label": "t:general.settings.option_center.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_text.content"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "t:general.settings.subheading.label",
      "default": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:general.settings.heading.label",
      "default": "Text"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "t:sections.text.settings.heading_size.label",
      "default": "h2",
      "options": [
        {
          "value": "h3",
          "label": "t:sections.text.settings.heading_size.options.small.label"
        },
        {
          "value": "h2",
          "label": "t:sections.text.settings.heading_size.options.regular.label"
        },
        {
          "value": "headline",
          "label": "t:sections.text.settings.heading_size.options.large.label"
        }
      ]
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:general.settings.description.label",
      "default": "<p>Use this text to share brand information with your customers. Introduce a new product, share an announcement or welcome customers.</p>"
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_buttons.content"
    },
    {
      "type": "text",
      "id": "button_main_text",
      "label": "t:general.settings.primary_button_label.label",
      "info": "t:general.settings.button_label.info",
      "default": "Button label"
    },
    {
      "type": "url",
      "id": "button_main_link",
      "label": "t:general.settings.primary_button_link.label"
    },
    {
      "type": "text",
      "id": "button_sub_text",
      "label": "t:general.settings.secondary_button_label.label",
      "info": "t:general.settings.button_label.info",
      "default": "Button label"
    },
    {
      "type": "url",
      "id": "button_sub_link",
      "label": "t:general.settings.secondary_button_link.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.text.name"
    }
  ]
}
{% endschema %}