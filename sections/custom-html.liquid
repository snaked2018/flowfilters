<div class="ctnr" data-ui-component="Custom HTML Section" role="region" aria-labelledby="sectionHeading-{{ section.id | md5 | truncate: 12, "" }}">
  <div class="m-auto" style="--w-xs:12;--w-md:10;">
    {% render 'section-header'
      content_align: section.settings.content_alignment,
      subheading: section.settings.subheading,
      heading: section.settings.heading,
      description: section.settings.description,
      section: section
    %}
  </div>
  <div class="s-content hide-empty m-auto" style="--w-xs:12;--w-md:8;">{{- section.settings.html_code -}}</div>
  {%- render 'section-id', section: section -%}
</div>
{% schema %}
{
  "name": "t:sections.custom_html.name",
  "settings": [
    {
      "type": "header",
      "content": "t:general.settings.headers.header_general.content"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "t:general.settings.section_subheading.label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:general.settings.section_heading.label",
      "default": "Custom HTML"
    },
    {
      "type": "text",
      "id": "description",
      "label": "t:general.settings.section_description.label"
    },
    {
      "type": "html",
      "id": "html_code",
      "label": "t:sections.custom_html.settings.html_code.label"
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_layout.content"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "t:general.settings.content_alignment.label",
      "default": "ta-left",
      "options": [
        {
          "value": "ta-left",
          "label": "t:general.settings.option_left.label"
        },
        {
          "value": "ta-center",
          "label": "t:general.settings.option_center.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.custom_html.name"
    }
  ]
}
{% endschema %}