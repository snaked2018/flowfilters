{%- liquid
  if image_ratio == 'adapt'
    assign ratio = 100
  endif

  assign card_content_classes = 'card__content--outer'

  assign money_price = 5000 | money
  assign money_price_sale = 10000 | money
  if settings.currency_code_enabled
    assign money_price = 5000 | money_with_currency
    assign money_price_sale = 10000 | money_with_currency
  endif
-%}

<div class="product w-100 p-relative o-hidden {{ card_classes }}">
  <div class="product__media p-relative card__media corner-radius-lg" style="--ratio:{{ ratio }}">
    {{ 'product-1' | placeholder_svg_tag: 'placeholder of-cover media' }}
  </div>
  <div class="card__content {{ card_content_classes }} wb-break-word">
    <div class="color-light subtext mb-4 {{ show_vendor | default: 'd-none' | replace: 'true', '' }}">
      <span class="visually-hidden">{{ 'accessibility.vendor' | t }}</span>
      <span>{{ 'sections.feature_collection.product_vendor.title' | t }}</span>
    </div>
    <h3 class="card__heading h6 mb-8 m-zero">
      <a href="#" class="pe-no-link">{{ 'sections.feature_collection.product.title' | t }}</a>
    </h3>
    <span class="price d-block">
      <span class="price__regular d-none">
        <span class="visually-hidden">{{ 'products.product.price.regular_price' | t }}</span>
        <span class="price-item price-item--regular price-item--last d-inline-block">{{ money_price }}</span>
      </span>
      <span class="price__sale d-flex middle-xs {{ content_align }}">
        <span class="visually-hidden">{{ 'products.product.price.sale_price' | t }}</span>
        <span class="price-item price-item--last d-inline-block mr-8">{{ money_price }}</span>
        <span class="visually-hidden">{{ 'products.product.price.regular_price' | t }}</span>
        <span class="d-inline-block">
          <s class="price-item price-item--regular color-light">{{ money_price_sale }}</s>
        </span>
      </span>
    </span>
  </div>
</div>
