{% liquid
  assign button_type = button_type | default: 'btn-primary'
  assign classes = classes | append: ' ls-none d-flex fw-wrap hide-empty'
%}
<ul class="{{ classes }}">
  {%- if settings.social_facebook_link != blank -%}
    <li>
      <a href="{{ settings.social_facebook_link }}" rel="noopener" aria-label="Facebook"
        class="btn btn-icon btn-large {{ button_type }} js-social-btn">
        {% render 'icon-facebook' %}
      </a>
    </li>
  {%- endif -%}
  {%- if settings.social_twitter_link != blank -%}
    <li>
      <a href="{{ settings.social_twitter_link }}" rel="noopener" title="Twitter" aria-label="Twitter"
        class="btn btn-icon btn-large {{ button_type }} js-social-btn">
        {% render 'icon-twitter' %}
      </a>
    </li>
  {%- endif -%}
  {%- if settings.social_youtube_link != blank -%}
    <li>
      <a href="{{ settings.social_youtube_link }}" rel="noopener" title="Youtube" aria-label="Youtube"
        aria-label="Youtube" class="btn btn-icon btn-large {{ button_type }} js-social-btn">
        {% render 'icon-youtube' %}
      </a>
    </li>
  {%- endif -%}
  {%- if settings.social_instagram_link != blank -%}
    <li>
      <a href="{{ settings.social_instagram_link }}" rel="noopener" title="Instagram" aria-label="Instagram"
        class="btn btn-icon btn-large {{ button_type }} js-social-btn">
        {% render 'icon-instagram' %}
      </a>
    </li>
  {%- endif -%}
  {%- if settings.social_linkedin_link != blank -%}
