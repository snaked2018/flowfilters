      <a href="{{ settings.social_tumblr_link }}" rel="noopener" title="Tumblr" aria-label="Tumblr"
        class="btn btn-icon btn-large {{ button_type }} js-social-btn">
        {% render 'icon-tumblr' %}
      </a>
    </li>
  {%- endif -%}
  {%- if settings.social_snapchat_link != blank -%}
