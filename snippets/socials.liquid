      <a href="{{ settings.social_pinterest_link }}" rel="noopener" title="Pinterest" aria-label="Pinterest"
        class="btn btn-icon btn-large {{ button_type }} js-social-btn">
        {% render 'icon-pinterest' %}
      </a>
    </li>
  {%- endif -%}
  {%- if settings.social_vimeo_link != blank -%}
