      <a href="{{ settings.social_snapchat_link }}" rel="Snapchat" title="Tumblr" aria-label="Snapchat"
        class="btn btn-icon btn-large {{ button_type }} js-social-btn">
        {% render 'icon-snapchat' %}
      </a>
    </li>
  {%- endif -%}
</ul>