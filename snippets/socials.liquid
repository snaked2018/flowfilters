      <a href="{{ settings.social_vimeo_link }}" rel="noopener" title="Vimeo" aria-label="Vimeo"
        class="btn btn-icon btn-large {{ button_type }} js-social-btn">
        {% render 'icon-vimeo' %}
      </a>
    </li>
  {%- endif -%}
  {%- if settings.social_tiktok_link != blank -%}
