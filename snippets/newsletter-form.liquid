{% comment %}
Usage:
{% render 'newsletter-form',
          form_id:  FORMID
          form_name: 'FORMNAME'
          %}
{% endcomment %}

{%- form 'customer', id: form_id -%}
  <input type="hidden" name="contact[tags]" value="newsletter">
  <div class="d-flex fd-column fd-row-sm gap-16 {{ classes }}" style="">
    <input type="text" name="contact[name]" placeholder="First Name" id="Name-{{ section_id }}" class="newsletter__input field__text field--focus field--hover w-100" required>
    <input id="newsletterForm--{{ form_id }}" type="email" name="contact[email]" class="newsletter__input field__text field--focus field--hover w-100" value="{{ form.email }}" aria-required="true" autocorrect="off" autocapitalize="off" autocomplete="email" {% if form.errors %} autofocus aria-invalid="true" aria-describedby="{{ form_name }}-error" {% elsif form.posted_successfully? %} aria-describedby="{{ form_name }}-success"{% endif %} placeholder="{{ 'general.newsletter.email_placeholder' | t }}" required>
    <label hidden class="field__label" for="newsletterForm--{{ form_id }}">{{ 'general.newsletter.label' | t }}</label>
    <button type="submit" class="btn btn-primary btn-large fs-0" name="commit" id="subscribe-{{ form_id }}" aria-label="{{ 'general.newsletter.button_label' | t }}">
      {%- if button_label -%}
        {{- button_label -}}
      {%- elsif button_icon -%}
        {%- render 'icon-chevron-right' -%}
      {%- else -%}
        {{- 'general.newsletter.button_label' | t -}}
      {%- endif -%}
    </button>
  </div>
  {%- if form.errors -%}
    <div class="d-flex middle-xs mt-16 mt-md-24 {{ content_align | default: 'center-xs' | replace: 'ta-center m-auto', 'center-xs' | replace: 'ta-left', 'start-xs' }}">
      <div class="icon icon--small icon--error fs-0">
        {% render 'icon-error', size: 16 %}
      </div>
      <span class="ml-8 subtext">
        {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
      </span>
    </div>
  {%- endif -%}
  {%- if form.posted_successfully? -%}
    <div class="d-flex middle-xs mt-16 mt-md-24 {{ content_align | default: 'center-xs' | replace: 'ta-center m-auto', 'center-xs' | replace: 'ta-left', 'start-xs' }}">
      <div class="icon icon--small icon--success fs-0">
        {% render 'icon-check-mark', size: 16 %}
      </div>
      <span class="ml-8 subtext">
        {{ 'general.newsletter.success' | t }}
      </span>
    </div>
  {%- endif -%}
{%- endform -%}